<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.limuyang.neteasemusiccontroller.view.MainActivity">

    <ImageButton
        android:id="@+id/last"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/ic_last_song"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.247"
        app:layout_constraintVertical_bias="0.844"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
    <ImageButton
        android:id="@+id/next"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/ic_next_song"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.844"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.761" />
    <ImageButton
        android:id="@+id/pause_play"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/ic_play_song"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.844"
        android:layout_marginStart="173dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />
    <ImageButton
        android:id="@+id/addvol"
        android:layout_width="43dp"
        android:layout_height="38dp"
        android:background="@drawable/ic_vol_add"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="325dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.743"
        android:layout_marginStart="325dp" />
    <ImageButton
        android:id="@+id/decvol"
        android:layout_width="43dp"
        android:layout_height="38dp"
        android:background="@drawable/ic_vol_dec"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="325dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.927"
        android:layout_marginStart="325dp" />




</android.support.constraint.ConstraintLayout>
